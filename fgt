#!/bin/bash
# FortiGate API Client Wrapper Script

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PYTHON_SCRIPT="$SCRIPT_DIR/fgt_api_client.py"

# Check if the main script exists
if [[ ! -f "$PYTHON_SCRIPT" ]]; then
    echo "Error: fgt_api_client.py not found in $SCRIPT_DIR"
    exit 1
fi

# Pass all arguments to the Python script, adding --format pretty if not present
ARGS=("$@")
FORMAT_SET=false
for arg in "${ARGS[@]}"; do
  if [[ "$arg" == "--format" ]] || [[ "$arg" == --format=* ]]; then
    FORMAT_SET=true
    break
  fi
done

if ! $FORMAT_SET; then
  ARGS+=(--format pretty)
fi

python3 "$PYTHON_SCRIPT" "${ARGS[@]}"

